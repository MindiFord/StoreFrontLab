
@model IEnumerable<StoreFront.DATA.EF.Category>

@{
    ViewBag.Title = "Categories";
}


@Html.Partial("_BreadcrumbPartial")
<div class="row">

    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <p>
            @Html.ActionLink("Add Category", "Create", null, new { @class = "btn site-btn" })
        </p>
        <table class="table table-striped table-bordered centered" id="myTable">

            <thead>
                <tr>
                    <th colspan="2">
                        @*@Html.DisplayNameFor(model => model.CategoryName)*@
                    </th>


                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>

                            <td class="pull-right">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, new { @class = "btn site-btn" })
                                @Html.ActionLink("Details", "Details", new { id = item.CategoryID }, new { @class = "btn site-btn" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn site-btn" })
                            </td>

                    </tr>
                }
            </tbody>

            <tfoot></tfoot>

        </table>
        <br />
    </div>
</div>

@section Scripts {

    <script>

        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>

}
