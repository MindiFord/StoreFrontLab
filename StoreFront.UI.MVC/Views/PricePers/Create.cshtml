@model StoreFront.DATA.EF.PricePer

@{
    ViewBag.Title = "Create Price Option";
}

@Html.Partial("_BreadcrumbPartial")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-5">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
              
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Price Description" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn site-btn" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn site-btn" })
                </div>
            </div>
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
